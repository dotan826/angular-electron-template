{
  "name": "angular-electron-template",
  "version": "0.0.0",
  "type": "commonjs",
  "scripts": {
    "ng": "ng",



    "start": "ng serve",
    "electron:build:watch": "tsup electron/main.ts electron/preload.ts --format cjs --out-dir dist-electron --watch",
    "electron:start:watch": "nodemon",
    "electron:dev": "wait-on http://localhost:4200 && concurrently \"npm:electron:build:watch\" \"npm:electron:start:watch\"",
    "dev": "concurrently \"npm:start\" \"npm:electron:dev\"",


    "build": "ng build && npm run build:electron",
    "watch": "ng build --watch --configuration development",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^19.2.0",
    "@angular/compiler": "^19.2.0",
    "@angular/core": "^19.2.0",
    "@angular/forms": "^19.2.0",
    "@angular/platform-browser": "^19.2.0",
    "@angular/platform-browser-dynamic": "^19.2.0",
    "@angular/router": "^19.2.0",
    "@types/node": "^24.10.1",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "nodemon": "^3.1.11",
    "rxjs": "~7.8.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tslib": "^2.3.0",
    "tsup": "^8.5.1",
    "wait-on": "^9.0.3",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.6",
    "@angular/cli": "^19.2.6",
    "@angular/compiler-cli": "^19.2.0",
    "@types/jasmine": "~5.1.0",
    "jasmine-core": "~5.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.7.2"
  }
}
